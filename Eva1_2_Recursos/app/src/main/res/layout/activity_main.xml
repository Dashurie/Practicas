<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp">

        <TextView
            android:id="@+id/viewNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nombre" />

        <EditText
            android:id="@+id/EditNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Pon tu numbre"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ViewAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Apellido" />

        <EditText
            android:id="@+id/EditAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Pon tu apellido"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ViewEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Edad" />

        <EditText
            android:id="@+id/EditEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Pon tu edad"
            android:inputType="textPersonName" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/Ragrup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ViewSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo" />

        <RadioButton
            android:id="@+id/RadioSex1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mucho"
            android:onClick="checkbutton"/>


        <RadioButton
            android:id="@+id/Radiosex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poco"
            android:onClick="checkbutton"/>

        <RadioButton
            android:id="@+id/RadioSex3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nada"
            android:onClick="checkbutton"
            android:checked="true"/>
    </RadioGroup>

    <Button
        android:id="@+id/BtnReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:onClick="registrardatos"/>

    <TextView
        android:id="@+id/ViewR"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Registro"
        android:textColor="#000000"
        android:textSize="18sp" />
</LinearLayout>